@model Lane4Task.Models.User

@{
    ViewData["Title"] = "User Details";
}


<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Lane4Task</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminIndex">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminFriends">Friends</a>
                    </li>

                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="navbar float-right">
                    <span>Welcome to</span>&nbsp;
                    <span>@ViewBag.Email</span>&nbsp;

                    <div class="dropdown">
                        <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Home")">Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("AdminFriends", "Home")">Friends</a></li>

                            <li>
                                <a class="dropdown-item" href="@Url.Action("SignOut", "Home")">Log Out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </nav>
</header>

<div class="container">
    <div class="card mx-auto mt-5" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">User Details</h5>
            <div class="card-text">
                <table class="table">
                    <tr>
                        <th>First Name:</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th>Last Name:</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Mobile Number:</th>
                        <td>@Model.MobileNumber</td>
                    </tr>
                    <tr>
                        <th>Age:</th>
                        <td>@Model.Age</td>
                    </tr>
                    <tr>
                        <th>Gender:</th>
                        <td>@Model.Gender</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
